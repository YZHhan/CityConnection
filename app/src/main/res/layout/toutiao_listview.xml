<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#ffffff"
    android:id="@+id/head_newInfo">

    <RelativeLayout

        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/head_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="你是我的眼女神许龄月,你找到吗哈哈哈哈"
            android:textSize="17sp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/head_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="顺义人网"
            />

        <ImageView
            android:id="@+id/head_look"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="30sp"
            android:layout_toRightOf="@id/head_head"
            android:scaleType="fitXY"
            android:layout_alignParentBottom="true"
            android:src="@drawable/ccoo_icon_look" />

        <TextView
            android:id="@+id/head_variable1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/head_look"
            android:layout_alignParentBottom="true"
            android:text="714"
            android:textSize="10sp"
            android:layout_marginLeft="5dp"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/head_image"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:scaleType="fitXY"

          />
</LinearLayout>